<section class="container">
  <h3 class="post-name">{{post.title}}</h3>
  <h4>Posted by: {{post.username}} on {{format_date post.post_date}} </h4>
  <p>{{post.content}}</p>
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}


