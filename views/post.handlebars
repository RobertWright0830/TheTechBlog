<div class="post">
  <header>
        {{post.title}} - <span style="font-size:small">Posted by: {{user.username}} on {{format_date post.post_date}}</span>
  </header>
  <p>{{post.content}}</p>
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
  </div>
  <div class="comment-entry">
    <header>Add A Comment:</header>
    <form>
      <textarea class="comment-field" placeholder="Leave a comment..." > </textarea>
      <button class="btn comment-btn" type="submit">Submit</button>
    </form>
  </div>

{{else}}
<a href="/login">You must login to view comments.</a>
{{/if}}


